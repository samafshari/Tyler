<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tyler.Views.SelectionRect">
	<Rectangle Stroke="Magenta" StrokeThickness="2" x:Name="rect">
		<Rectangle.Styles>
			<Style Selector="Rectangle">
				<Style.Animations>
					<Animation Duration="0:0:3">
						<KeyFrame Cue="0%">
							<Setter Property="Rectangle.Stroke" Value="Magenta" />
						</KeyFrame>
						<KeyFrame Cue="50%">
							<Setter Property="Rectangle.Stroke" Value="White" />
						</KeyFrame>
						<KeyFrame Cue="100%">
							<Setter Property="Rectangle.Stroke" Value="Magenta" />
						</KeyFrame>
					</Animation>
				</Style.Animations>
			</Style>
		</Rectangle.Styles>
	</Rectangle>
</UserControl>
